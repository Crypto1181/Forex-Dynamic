# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Use GitHub source instead of CDN to avoid 500 errors
source 'https://github.com/CocoaPods/Specs.git'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try: flutter pub get"
end

# Load Flutter.podspec - Flutter should generate this before pod install runs
flutter_podspec_path = File.expand_path(File.join('Flutter', 'ephemeral', 'Flutter.podspec'), File.dirname(__FILE__))
unless File.exist?(flutter_podspec_path)
  # If Flutter.podspec doesn't exist, Flutter needs to prepare the iOS build first
  # This should happen automatically during 'flutter build ios', but if pod install
  # runs separately, you may need to run 'flutter precache' or 'flutter pub get' first
  raise "#{flutter_podspec_path} must exist. Run 'flutter pub get' or 'flutter build ios' first to generate it."
end
require flutter_podspec_path

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end
