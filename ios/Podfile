# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Use GitHub source instead of CDN to avoid 500 errors
source 'https://github.com/CocoaPods/Specs.git'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Specify workspace to avoid CocoaPods error
workspace 'Runner.xcworkspace'

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try: flutter pub get"
end

# Load Flutter podspec helper
flutter_podspec_path = File.expand_path(File.join('Flutter', 'ephemeral', 'Flutter.podspec'), flutter_root)
if File.exist?(flutter_podspec_path)
  require flutter_podspec_path
else
  raise "Flutter.podspec not found at #{flutter_podspec_path}. Make sure flutter pub get has been run."
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Install all Flutter iOS pods
  flutter_application_path = File.dirname(File.realpath(__FILE__))
  
  # Try to use Flutter's automatic plugin installation
  if defined?(flutter_install_all_ios_pods)
    begin
      flutter_install_all_ios_pods(flutter_application_path)
    rescue => e
      puts "Warning: flutter_install_all_ios_pods failed: #{e.message}"
      puts "Attempting to load plugins manually..."
      
      # Fallback: Load plugins from .flutter-plugins file
      flutter_plugins_file = File.join(flutter_application_path, '..', '.flutter-plugins')
      if File.exist?(flutter_plugins_file)
        File.readlines(flutter_plugins_file).each do |line|
          next if line.strip.empty? || line.start_with?('#')
          plugin_name, plugin_path = line.strip.split('=')
          next unless plugin_name && plugin_path
          
          # Check if this plugin has iOS support
          plugin_ios_path = File.join(plugin_path, 'ios')
          if File.exist?(plugin_ios_path)
            pod plugin_name, :path => plugin_path
          end
        end
      end
    end
  else
    raise "flutter_install_all_ios_pods function not available. Flutter.podspec may not be loaded correctly."
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    if defined?(flutter_additional_ios_build_settings)
      flutter_additional_ios_build_settings(target)
    end
  end
end
